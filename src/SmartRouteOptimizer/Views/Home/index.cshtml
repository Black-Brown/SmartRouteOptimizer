        }

            .btn-secondary:hover {
                background: rgba(52, 73, 94, 0.2);
                border-color: #34495e;
            }

        .btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }

        .strategy-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-top: 1rem;
        }

        .strategy-card {
            background: rgba(255, 255, 255, 0.8);
            border: 2px solid #e0e6ed;
            border-radius: 12px;
